<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/location_item"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/image_location_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_location_icon"
        android:layout_marginTop="10dp"
        android:text="Location Name"
        android:padding="10dp"
        android:id="@+id/text_location_name"
        android:textColor="#000"
        />

    <RatingBar
        android:id="@+id/rating_location"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_location_name"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/image_location_icon"
        android:rating="4" />

</RelativeLayout>